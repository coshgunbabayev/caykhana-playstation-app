<div class="container mt-4">
    <div class="row bg-light py-2 rounded border">
        <div class="col-3">
            <input type="radio" class="btn-check" id="1" name="date" onclick="changeOption('day', undefined)" checked>
            <label for="1" class="btn btn-outline-primary">Bu gün</label>

            <input type="radio" class="btn-check" id="2" name="date" onclick="changeOption('month', undefined)">
            <label for="2" class="btn btn-outline-primary">Bu ay</label>

            <input type="radio" class="btn-check" id="3" name="date" onclick="changeOption('year', undefined)">
            <label for="3" class="btn btn-outline-primary">Bu il</label>

        </div>

        <div class="col-4 d-flex gap-2">
            <input type="number" id="dayInput" class="form-control" placeholder="Gün">

            <input type="number" id="monthInput" class="form-control" placeholder="Ay">

            <input type="number" id="yearInput" class="form-control" placeholder="İl">
        </div>

        <div class="col-3">
            <input type="radio" class="btn-check" id="4" name="section" onclick="changeOption(undefined, 'both')"
                checked>
            <label for="4" class="btn btn-outline-primary">Hər ikisi</label>

            <input type="radio" class="btn-check" id="5" name="section" onclick="changeOption(undefined, 'income')">
            <label for="5" class="btn btn-outline-primary">Gəlirlər</label>

            <input type="radio" class="btn-check" id="6" name="section" onclick="changeOption(undefined, 'expense')">
            <label for="6" class="btn btn-outline-primary">Xərclər</label>
        </div>

        <div class="col-2 align-items-center">
            <div id="totalMoneyDiv" class="btn btn-primary w-100">
            </div>
        </div>
    </div>

    <div class="row bg-primary text-white fw-bold py-2 rounded mt-2">
        <div class="col-4">Ad (masa, xərc)</div>
        <div class="col-2">Gəlir</div>
        <div class="col-2">Xərc</div>
        <div class="col-2">Mənfəət</div>
        <div class="col-2">Tarix</div>
    </div>

    <div id="contentList"> </div>
</div>

<script src="https://momentjs.com/downloads/moment.js"></script>
