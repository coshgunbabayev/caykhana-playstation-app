<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin hesaba giriş</title>
    <%- include('../links/bootstrap') %>
        <link rel="stylesheet" href="/css/form.css">

</head>

<body>
    <%- include('../navbar/admin-login') %>

        <section class="bg-image" style="margin-top: 3%;">
            <div class="d-flex justify-content-center">
                <div class="card p-5" style="border-radius: 15px; max-width: 400px; width: 100%;">
                    <h2 class="text-center mb-5">PAROLU DAXİL EDİN</h2>
                    <form id="loginForm">
                        <div class="form-outline mb-4">
                            <label class="form-label" for="password">Parol</label>
                            <input type="password" id="password" name="password"
                                class="form-control form-control-lg" />
                            <span id="passwordError" class="error"></span>
                        </div>

                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary btn-lg">Giriş</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>


        <script src="/js/admin/login.js"></script>
</body>

</html>